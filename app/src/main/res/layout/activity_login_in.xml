<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#19000000"
        tools:context=".LoginIn">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vong1"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="-50dp"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vong2"
            android:layout_marginTop="-110dp"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-130dp"
            android:layout_marginRight="-100dp"
            android:background="@drawable/vong3"></ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/editemail1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom1"
            android:hint=" Your email or phone"
            android:textSize="15dp"></EditText>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editemail1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/editpass1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom1"
            android:hint=" Your password"
            android:inputType="textPassword"
            android:textSize="15dp"></EditText>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editpass1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Forgot password ?"
            android:layout_centerHorizontal="true"
            android:textColor="#F44336"
            android:textSize="15dp"></TextView>


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@id/text4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom"
            android:backgroundTint="@color/white"
            android:text="Login "
            app:backgroundTint="#F3F44336"></Button>
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/btnlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Don't have an account ? "></TextView>

        <TextView
            android:id="@+id/tvsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text5"
            android:text="Sign up "
            android:textColor="#F44336"></TextView>
        <LinearLayout
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <View
                android:id="@+id/view1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#57000000"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sign in with"
                android:textSize="15dp"

                android:layout_marginLeft="20dp"
                android:textColor="@color/black"></TextView>
            <View
                android:id="@+id/view2"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="#57000000"></View>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/views"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/face"
            android:text="Facebook"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:backgroundTint="#FFFFFF"></Button>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/views"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/google"
            app:backgroundTint="#FFFFFF"
            android:textSize="10dp"
            android:text="Google"
            android:textColor="@color/black"></Button>
    </RelativeLayout>
</layout>